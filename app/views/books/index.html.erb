<div class="row">
  <div class="text-center">
    <h2>作品名一覧</h2>
  </div>
  <table class="table table-striped">
    <tr>
      <th>作品名</th>
      <th>著者名</th>
      <th>最新フレーズ</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author.name %></td>
        <td><%= book.phrases.present? ? book.phrases.last.content : 'フレーズはありません' %></td>
      </tr>
    <% end %>
  </table>
</div>
