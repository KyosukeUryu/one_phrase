<% if logged_in? %>
  <p class="mb-4">ログイン完了ユーザ<%= current_user.name %></p>
  <table class="table table-striped">
    <tr>
      <th class="text-center">フレーズ</th>
      <th class="text-center">作品名</th>
      <th class="text-center">投稿日時</th>
    </tr>
    <tr>
      <% @phrases.each do |phrase| %>
        <td class="text-center"><%= link_to 'phrase.content', phrase_path(phrase) %></td>
        <td class="text-center"><%= phrase.book.name %></td>
        <td class="text-center"><%= phrase.created_at %></td>
      <% end %>    
    </tr>
  </table>
  <div class="mt-3 col-sm-4 offset-sm-4">
    <%= link_to '新規フレーズ投稿', new_author_url, class: 'btn btn-block btn-primary' %>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>One Phrase</h1>
    </div>
  </div>
<% end %>